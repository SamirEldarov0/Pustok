@model Order
@{
    ViewData["Title"] = "Detail";
}

<div class="d-flex justify-content-middle">
    <div class="tab-content d-flex justify-content-middle mt-3" id="nav-tabContent" style="margin: auto 3rem;">
        <!-- Order Details -->
        <div class="tab-pane fade show active" id="order" role="tabpanel" aria-labelledby="nav-home-tab">
            <div id="" role="tablist">
                <div class="row ">

                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header">
                                <div class="d-inline h4">Order Details - @Model.AppUser.FullName</div>
                                <div class="d-inline float-right"><small></small></div>
                            </div>
                            <div class="card-body">
                                <dl class="row">
                                    <dd class="col-sm-4">Country</dd>
                                    <dt class="col-sm-8">@Model.Country</dt>
                                    <dd class="col-sm-4">State</dd>
                                    <dt class="col-sm-8">@Model.State</dt>
                                    <dd class="col-sm-4">City</dd>
                                    <dt class="col-sm-8">@Model.City</dt>
                                    <dd class="col-sm-4">Address</dd>
                                    <dt class="col-sm-8">@Model.Address</dt>

                                </dl>
                                <hr />
                                <dl class="row">
                                    <dd class="col-sm-4">Ordered Date</dd>
                                    <dt class="col-sm-8">@Model.OrderedDate</dt>
                                    <dd class="col-sm-4">Note</dd>
                                    <dt class="col-sm-8">@Model.Note</dt>
                                    <dd class="col-sm-4">Count general</dd>
                                    <dt class="col-sm-8">@Model.OrderItems.Count</dt>
                                    <dd class="col-sm-4">Count All Books</dd>
                                    <dt class="col-sm-8">@Model.OrderItems.Sum(x => x.Count)</dt>
                                    <dd class="col-sm-4">Status</dd>
                                    <dt class="col-sm-8">
                                        @if (Model.Status == true)
                                        {
                                            <span class="badge text-bg-success">Success</span>
                                        }
                                        else if (Model.Status == false)
                                        {
                                            <span class="badge text-bg-danger">Danger</span>
                                        }
                                        else
                                        {
                                            <span class="badge text-bg-warning">Warning</span>
                                        }
                                    </dt>
                                </dl>
                                <hr>
                                <dl class="row">
                                    @foreach (var item in Model.OrderItems)
                                    {
                                        <dt class="col-sm-12">Book</dt>
                                        <dd class="col-sm-12">
                                            <b>Name</b> - @item.Name   <b>   Count</b> - @item.Count   <b>   DiscountetPrice</b> - @item.Price
                                        </dd>
                                    }
                                    <dd class="col-sm-4">TotalPrice</dd>
                                    <dt class="col-sm-8">@Model.TotalPrice</dt>
                                </dl>
                                <a class="btn btn-primary" asp-action="index">Go back to orders</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- End of Order Details -->

    </div>

</div>


