@model UserUpdateViewModel
@{
    ViewData["Title"] = "Edit";
}

<section class="breadcrumb-section">
	<h2 class="sr-only">Site Breadcrumb</h2>
	<div class="container">
		<div class="breadcrumb-contents">
			<nav aria-label="breadcrumb">
				<ol class="breadcrumb">
					<li class="breadcrumb-item"><a asp-action="index" asp-controller="home">Home</a></li>
					<li class="breadcrumb-item active">Edit</li>
				</ol>
			</nav>
		</div>
	</div>
</section>
<!--=============================================
=            Login Register page content         =
=============================================-->
<main class="page-section inner-page-sec-padding-bottom">
	<div class="container">
		<div class="row">
			<div class="col-sm-12 col-md-12 col-xs-12 col-lg-6 mb--30 mb-lg--0">
				<!-- Login Form s-->
				<form method="post">
					<div class="login-form">

						<p><span class="font-weight-bold">Edit</span></p>
						<div class="row">
							<div class="col-md-12 col-12 mb--15">
								<label asp-for="FullName">Full Name</label>
								<input class="mb-0 form-control" asp-for="FullName" placeholder="Enter your full name">
								<span class="text-danger" asp-validation-for="FullName"></span>
							</div>
							<div class="col-12 mb--20">
								<label asp-for="UserName">UserName</label>
								<input class="mb-0 form-control" asp-for="UserName" placeholder="Enter Your User Name Here..">
								<span class="text-danger" asp-validation-for="UserName"></span>
							</div>

							<div class="col-12 mb--20">
								<label asp-for="Country">Country</label>
								<input class="mb-0 form-control" asp-for="Country" placeholder="Enter Your Country Here..">
								<span class="text-danger" asp-validation-for="Country"></span>
							</div>

							<div class="col-12 mb--20">
								<label asp-for="City">City</label>
								<input class="mb-0 form-control" asp-for="City" placeholder="Enter Your City Here..">
								<span class="text-danger" asp-validation-for="City"></span>
							</div>

							<div class="col-12 mb--20">	
								<label asp-for="State">State</label>
								<input class="mb-0 form-control" asp-for="State" placeholder="Enter Your State Here..">
								<span class="text-danger" asp-validation-for="State"></span>
							</div>


							<div class="col-12 mb--20">
								<label asp-for="Address">Address</label>
								<textarea class="mb-0 form-control" asp-for="Address" placeholder="Enter Your Address Here.."></textarea>
								<span class="text-danger" asp-validation-for="Address"></span>
							</div>

							<div class="col-12 mb--20">
								<label asp-for="Email">Email</label>
								<input class="mb-0 form-control" asp-for="Email" placeholder="Enter Your Email Address Here..">
								<span class="text-danger" asp-validation-for="Email"></span>
							</div>

							<div class="col-lg-6 mb--20">
								<label asp-for="Password">Password</label>
								<input class="mb-0 form-control" asp-for="Password" placeholder="Enter your password">
								<span class="text-danger" asp-validation-for="Password"></span>
							</div>
							<div class="col-lg-6 mb--20">
								<label asp-for="ConfirmPassword">Confirm Password</label>
								<input class="mb-0 form-control" asp-for="ConfirmPassword" placeholder="Repeat your password">
								<span class="text-danger" asp-validation-for="ConfirmPassword"></span>
							</div>
							<div class="col-lg-6 mb--20">
								<label asp-for="CurrentPassword">Current Password</label>
								<input class="mb-0 form-control" asp-for="CurrentPassword" placeholder="Your current password">
								<span class="text-danger" asp-validation-for="CurrentPassword"></span>
							</div>
							<div class="text-danger" asp-validation-summary="ModelOnly">
							</div>
							<div class="col-md-12">
								<button type="submit" class="btn btn-outlined">EDIT</button>
							</div>
						</div>
					</div>
				</form>
			</div>

		</div>
	</div>
</main>

