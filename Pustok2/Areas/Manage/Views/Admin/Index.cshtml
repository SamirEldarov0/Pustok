@model List<AppUser>
@{
    ViewData["Title"] = "Index";
    int order = 1;
}
<div class="container-fluid">
    <div class="d-flex justify-content-end">
        <a class="btn btn-primary"  asp-action="createadmin">Create</a>   @* add olunub 3 setr *@
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Full Name</th>
                <th scope="col">UserName</th>
                <th scope="col">Email</th>
                <th scope="col">Phone Number</th>
                <th scope="col">
                <th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@order</th>
                    <td>@item.FullName</td>
                    <td>@item.UserName</td>
                    <td>@item.Email</td>
                    <td></td>
                    <td>
                        <a asp-action="edit" asp-route-adminId="@item.Id" class="btn btn-warning">Update</a>
                        <a asp-action="delete" asp-route-adminId="@item.Id" class="btn btn-danger admin-delete">Delete</a>
                    </td>
                </tr>
                order++;
            }
        </tbody>
    </table>


</div>

@section Scripts
{
    <script>
        $(document).ready(function(){
            $(".admin-delete").on("click",e=>{
                e.preventDefault();
                Swal.fire({
                    title: "Are you sure?",
                    text: "You won't be able to revert this!",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: "Yes, delete it!"
                }).then((result) => {
                    if (result.isConfirmed) {
                        
                        var url=$(this).attr("href")
                        fetch(url)
                            .then(response=>response.json())
                            .then(data=>{
                                if (data.status == 200) {
                                    Swal.fire({
                                        title: "Deleted!",
                                        text: "Your file has been deleted.",
                                        icon: "success"
                                    });
                                }
                                else {
                                    Swal.fire({
                                        title: "Not Found!",
                                        text: "Your file has not been found.",
                                        icon: "error"
                                    });
                                }
                            })
                    }
                });
            })
        })
    </script>
}



